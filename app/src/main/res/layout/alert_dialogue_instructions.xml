<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Creating a new group"
        android:id="@+id/textView4"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:background="#6fcddc39"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Joining a group"
        android:id="@+id/textView3"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:background="#6fcddc39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="17dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:text="1. Ask &quot;GROUP NAME&quot; and &quot;PASSWORD&quot; from the person who created the group.\n\n2. Tap on the group you want to join.\n\n3. Enter password."
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:textSize="17dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:text="1. Enter group name and password.\n\n2. Tap on  &quot;ADD GROUP&quot;.\n\n3. Share your group name and password with your family/friends."
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="In Journey"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#6fcddc39"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView7"
        android:textSize="17dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text=" Use &quot;BUTTONS&quot; to get location. Chat by typing message and then tap &quot;SEND&quot; button."
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp" />
</RelativeLayout>